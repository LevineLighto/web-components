{
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "ES2021",
        "module": "ES2022",
        "moduleResolution": "node",
        "baseUrl": "./",
        "strict": true,                 
        "skipLibCheck": true,           
        "noImplicitAny": false,
        "paths": {
            "@/*" : ["./src/*"],
        }
    },
    "include": ["*.ts", "**/*.ts"]  
}